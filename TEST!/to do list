import customtkinter as ctk

ctk.set_appearance_mode("dark")

root = ctk.CTk()
root.geometry("400x300")

# Main container
main_frame = ctk.CTkFrame(root)
main_frame.pack(fill="both", expand=True)

# Left vertical tab bar
tab_bar = ctk.CTkFrame(main_frame, width=100)
tab_bar.pack(side="left", fill="y")

# Content frame
content_frame = ctk.CTkFrame(main_frame)
content_frame.pack(side="right", fill="both", expand=True)

# Dictionary to store tab pages
pages = {}

def show_page(name):
    # Hide all pages
    for p in pages.values():
        p.pack_forget()
    # Show selected page
    pages[name].pack(fill="both", expand=True)

# Create vertical "tabs"
for name in ["Home", "Settings", "Profile"]:
    btn = ctk.CTkButton(tab_bar, text=name, width=100,
                        corner_radius=0,
                        command=lambda n=name: show_page(n))
    btn.pack(fill="x")

    # Create pages
    page = ctk.CTkFrame(content_frame)
    ctk.CTkLabel(page, text=f"{name} Page", font=("Arial", 20)).pack(pady=20)
    pages[name] = page

# Show first tab by default
show_page("Home")

root.mainloop()

